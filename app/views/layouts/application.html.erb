<!DOCTYPE html>
<html>
<head>
  <title>Tunity</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
  <p class="user">Logged in as <%= current_user.email %> (<%= link_to 'Log out', destroy_user_session_path %>)</p>
<% else %>
  <p class="sign-in"><%= link_to 'Sign in!', new_user_session_path %></p>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

<%= inline_jsonp('tunity.setConfig', js_config) %>
<%= inline_jsonp('tunity.setPageVars', js_page_vars) %>
</body>
</html>
